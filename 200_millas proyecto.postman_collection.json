            "name": "Users",
            "item": [
                {
                    "name": "Register User (Cliente)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "// Verificar respuesta exitosa",
                                    "pm.test(\"Status code is 201\", function () {",
                                    "    pm.response.to.have.status(201);",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"nombre\": \"Juan Pérez\",\n  \"correo\": \"juan.perez@cliente.com\",\n  \"contrasena\": \"password123\",\n  \"role\": \"Cliente\"\n}"
                        },
                        "url": {
                            "raw": "{{users_url}}/users/register",
                            "host": [
                                "{{users_url}}"
                            ],
                            "path": [
                                "users",
                                "register"
                            ]
                        }
                    }
                },
                {
                    "name": "Login User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "// Verificar respuesta exitosa",
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "// Extraer y guardar el token automáticamente",
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    if (jsonData.token) {",
                                    "        pm.collectionVariables.set(\"token\", jsonData.token);",
                                    "        console.log(\"Token guardado: \" + jsonData.token);",
                                    "    }",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"correo\": \"juan.perez@cliente.com\",\n  \"contrasena\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{users_url}}/users/login",
                            "host": [
                                "{{users_url}}"
                            ],
                            "path": [
                                "users",
                                "login"
                            ]
                        }
                    }
                },
                {
                    "name": "Mi Usuario",
