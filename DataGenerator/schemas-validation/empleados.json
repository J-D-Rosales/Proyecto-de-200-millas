{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Empleados",
  "type": "object",
  "x-dynamodb": {
    "partition_key": "local_id",
    "sort_key": "dni"
  },
  "properties": {
    "local_id": {
      "type": "string"
    },
    "dni": {
      "type": "string"
    },
    "nombre": {
      "type": "string"
    },
    "apellido": {
      "type": "string"
    },
    "role": {
      "type": "string",
      "enum": [
        "Repartidor",
        "Cocinero",
        "Despachador"
      ]
    }
  },
  "required": [
    "local_id",
    "dni",
    "nombre",
    "apellido",
    "role"
  ],
  "additionalProperties": false
}