{
  "Comment": "Orquestaci√≥n de Pedidos - Proyecto 200 Millas",
  "StartAt": "ProcesarPedido",
  "States": {
    "ProcesarPedido": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke.waitForTaskToken",
      "Parameters": {
        "FunctionName": "${ProcesarPedidoLambdaArn}",
        "Payload": {
          "taskToken.$": "$$.Task.Token",
          "input.$": "$"
        }
      },
      "Next": "PedidoEnCocina"
    },
    "PedidoEnCocina": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke.waitForTaskToken",
      "Parameters": {
        "FunctionName": "${PedidoEnCocinaLambdaArn}",
        "Payload": {
          "taskToken.$": "$$.Task.Token",
          "input.$": "$"
        }
      },
      "Next": "EvaluarCocina"
    },
    "EvaluarCocina": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.status",
          "StringEquals": "RECHAZADO",
          "Next": "ReintentarCocina"
        }
      ],
      "Default": "CocinaCompleta"
    },
    "ReintentarCocina": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "${ReintentarCocinaLambdaArn}",
        "Payload": {
          "input.$": "$"
        }
      },
      "Retry": [
        {
          "ErrorEquals": [
            "States.ALL"
          ],
          "IntervalSeconds": 1,
          "MaxAttempts": 3,
          "BackoffRate": 2.0
        }
      ],
      "Next": "EvaluarReintentoCocina"
    },
    "EvaluarReintentoCocina": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.retry_count",
          "NumericLessThanEquals": 3,
          "Next": "ProcesarPedido"
        }
      ],
      "Default": "CocinaFallida"
    },
    "CocinaFallida": {
      "Type": "Fail",
      "Error": "MaxRetriesReached",
      "Cause": "La cocina rechazo el pedido mas de 3 veces"
    },
    "CocinaCompleta": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke.waitForTaskToken",
      "Parameters": {
        "FunctionName": "${CocinaCompletaLambdaArn}",
        "Payload": {
          "taskToken.$": "$$.Task.Token",
          "input.$": "$"
        }
      },
      "Next": "Empaquetado"
    },
    "Empaquetado": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke.waitForTaskToken",
      "Parameters": {
        "FunctionName": "${EmpaquetadoLambdaArn}",
        "Payload": {
          "taskToken.$": "$$.Task.Token",
          "input.$": "$"
        }
      },
      "Next": "Delivery"
    },
    "Delivery": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke.waitForTaskToken",
      "Parameters": {
        "FunctionName": "${DeliveryLambdaArn}",
        "Payload": {
          "taskToken.$": "$$.Task.Token",
          "input.$": "$"
        }
      },
      "Next": "EvaluarDelivery"
    },
    "EvaluarDelivery": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.status",
          "StringEquals": "RECHAZADO",
          "Next": "ReintentarDelivery"
        }
      ],
      "Default": "Entregado"
    },
    "ReintentarDelivery": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "${ReintentarDeliveryLambdaArn}",
        "Payload": {
          "input.$": "$"
        }
      },
      "Retry": [
        {
          "ErrorEquals": [
            "States.ALL"
          ],
          "IntervalSeconds": 1,
          "MaxAttempts": 3,
          "BackoffRate": 2.0
        }
      ],
      "Next": "EvaluarReintentoDelivery"
    },
    "EvaluarReintentoDelivery": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.retry_count",
          "NumericLessThanEquals": 3,
          "Next": "Empaquetado"
        }
      ],
      "Default": "DeliveryFallido"
    },
    "DeliveryFallido": {
      "Type": "Fail",
      "Error": "MaxRetriesReached",
      "Cause": "El delivery rechazo el pedido mas de 3 veces"
    },
    "Entregado": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke.waitForTaskToken",
      "Parameters": {
        "FunctionName": "${EntregadoLambdaArn}",
        "Payload": {
          "taskToken.$": "$$.Task.Token",
          "input.$": "$"
        }
      },
      "Next": "EntregaCompleta"
    },
    "EntregaCompleta": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "${EntregaCompletaLambdaArn}",
        "Payload": {
          "input.$": "$"
        }
      },
      "End": true
    }
  }
}